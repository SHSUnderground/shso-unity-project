<?xml version="1.0" encoding="us-ascii" ?>
<activities>
	<activity>
		<id>troublebots</id>
		<description>Find the Troublebots around the zones and vanquish them before they do further harm!</description>
		<autostartonzoneload>1</autostartonzoneload>
		<activityclass>SHSTroubleBotActivity</activityclass>
		<configuration>
			<startcount>0</startcount>
			<!-- if nobody ever played this, spawn this many -->
			<spawn_rate>0.5</spawn_rate>
			<spawn_interval>Minute</spawn_interval>
			<max_spawn>8</max_spawn>
			<autoactivateonspawn>1</autoactivateonspawn>
			<xp_earned>20</xp_earned>
		</configuration>
	</activity>
	<activity>
		<id>rallyactivity</id>
		<description>Race through the highlighted track as fast as possible, and you'll earn a ticket!</description>
		<autostartonzoneload>0</autostartonzoneload>
		<activityclass>SHSRallyActivity</activityclass>
		<configuration>
			<startcount>0</startcount>
			<exclusivepath>1</exclusivepath>
			<autoactivateonspawn>0</autoactivateonspawn>
		</configuration>
	</activity>
	<activity>
		<id>robberrallyactivity</id>
		<description>Catch the robber!</description>
		<autostartonzoneload>1</autostartonzoneload>
		<activityclass>SHSRobberRallyActivity</activityclass>
		<configuration>
			<active_respawn_delay_seconds>600</active_respawn_delay_seconds>
			<inactive_respawn_delay_seconds>3600</inactive_respawn_delay_seconds>
			<default_rally_duration>20</default_rally_duration>
      <!--
      <required_destiny_completion>200004</required_destiny_completion> -->
		</configuration>
	</activity>
	<activity>
		<id>hedgedropactivity</id>
		<description>Loot drops from hedge objects</description>
		<autostartonzoneload>0</autostartonzoneload>
		<activityclass>SHSHedgeDropActivity</activityclass>
	</activity>
	<activity>
		<id>feathersactivity</id>
		<description>Collect all the hero coins!</description>
		<autostartonzoneload>1</autostartonzoneload>
		<activityclass>SHSFeathersActivity</activityclass>
		<configuration>
			<feather_count>5</feather_count>
			<xp_earned_1>40</xp_earned_1>
			<xp_earned_2>60</xp_earned_2>
			<xp_earned_3>80</xp_earned_3>
			<xp_earned_4>120</xp_earned_4>
			<xp_earned_5>200</xp_earned_5>
			<counter_key>Feathers</counter_key>
			<state_counter_subkey>CollectionState</state_counter_subkey>
			<set_collection_counter_subkey>CollectionCount</set_collection_counter_subkey>
			<last_reset_counter_subkey>LastResetTime</last_reset_counter_subkey>
			<required_destiny_completion>200002</required_destiny_completion>
		</configuration>
	</activity>
	<activity>
		<id>fractalsactivity</id>
		<description>Collect fractals!</description>
		<autostartonzoneload>1</autostartonzoneload>
		<activityclass>SHSFractalsActivity</activityclass>
		<configuration>
			<fractal_count>10</fractal_count>
			<counter_key>Fractals</counter_key>
			<state_counter_subkey>CollectionState</state_counter_subkey>
			<set_collection_counter_subkey>CollectionCount</set_collection_counter_subkey>
			<last_reset_counter_subkey>LastResetTime</last_reset_counter_subkey>
			<required_destiny_completion>200001</required_destiny_completion>
		</configuration>
	</activity>
	<activity>
		<id>goldenfractalactivity</id>
		<description>Collect the golden fractal!</description>
		<autostartonzoneload>1</autostartonzoneload>
		<activityclass>SHSGoldenFractalActivity</activityclass>
		<configuration>
			<fractal_count>1</fractal_count>
			<counter_key>Fractals</counter_key>
			<state_counter_subkey>GoldenCollectionState</state_counter_subkey>
			<set_collection_counter_subkey>GoldenCollectionCount</set_collection_counter_subkey>
			<last_reset_counter_subkey>GoldenLastResetTime</last_reset_counter_subkey>
		</configuration>
	</activity>
	<activity>
		<id>scavengeractivity</id>
		<description>Collect Scavenger Hunt objects!</description>
		<autostartonzoneload>1</autostartonzoneload>
		<activityclass>SHSScavengerActivity</activityclass>
		<configuration>
			<scavenger_count>5</scavenger_count>
			<counter_key>Scavenge</counter_key>
			<state_counter_subkey>CollectionState</state_counter_subkey>
			<set_collection_counter_subkey>CollectionCount</set_collection_counter_subkey>
			<last_reset_counter_subkey>LastResetTime</last_reset_counter_subkey>
			<required_destiny_completion>200013</required_destiny_completion>
		</configuration>
	</activity>
	<activity>
		<id>wheresimpossiblemanactivity</id>
		<description>Find the hidden Impossible Man!</description>
		<autostartonzoneload>1</autostartonzoneload>
		<activityclass>SHSWheresImpossibleManActivity</activityclass>
		<configuration>
			<impossible_man_count>5</impossible_man_count>
			<counter_key>WheresImpossibleMan</counter_key>
			<state_counter_subkey>CollectionState</state_counter_subkey>
			<set_collection_counter_subkey>CollectionCount</set_collection_counter_subkey>
			<last_reset_counter_subkey>LastResetTime</last_reset_counter_subkey>
			<required_destiny_completion>200011</required_destiny_completion>
		</configuration>
	</activity>
	<activity>
		<id>pigeonactivity</id>
		<description>Rats with wings!</description>
		<autostartonzoneload>1</autostartonzoneload>
		<activityclass>SHSPigeonActivity</activityclass>
		<configuration>
			<min_start_pigeons>60</min_start_pigeons>
			<max_start_pigeons>70</max_start_pigeons>
			<min_pigeon_respawn_seconds>10</min_pigeon_respawn_seconds>
			<max_pigeon_respawn_seconds>20</max_pigeon_respawn_seconds>
			<limiting_thresholds>
				<threshold>
					<character_count>10</character_count>
					<max_percent>75</max_percent>
				</threshold>
				<threshold>
					<character_count>15</character_count>
					<max_percent>50</max_percent>
				</threshold>
				<threshold>
					<character_count>20</character_count>
					<max_percent>25</max_percent>
				</threshold>
			</limiting_thresholds>
		</configuration>
	</activity>
	<activity>
		<id>npcgatingactivity</id>
		<description>Replacing fake friends with real ones!</description>
		<autostartonzoneload>1</autostartonzoneload>
		<activityclass>SHSNPCGatingActivity</activityclass>
		<configuration>
			<limiting_thresholds>
				<threshold>
					<character_count>10</character_count>
					<max_percent>75</max_percent>
				</threshold>
				<threshold>
					<character_count>15</character_count>
					<max_percent>50</max_percent>
				</threshold>
				<threshold>
					<character_count>20</character_count>
					<max_percent>25</max_percent>
				</threshold>
			</limiting_thresholds>
		</configuration>
	</activity>
